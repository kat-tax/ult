{
  "compilerOptions": {
    "declaration": true,
    "noResolve": false,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "dist/",
    "skipLibCheck": true,
    "lib": [
      "es5",
      "dom"
    ],
    "types" : ["lodash", "node", "react", "react-dom", "react-native"]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "dist",
    "node_modules",
    "website"
  ]
}
